<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF"
    android:id="@+id/event_detail_layout"
    tools:context="com.pezzuto.pezzuto.EventDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="Corso patentino frigoristi"
        android:textAppearance="?android:textAppearanceLarge" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:id="@+id/date_layout"
        android:layout_below="@id/title"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/colorAccent"
            android:paddingTop="4dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/ic_event_white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="30 maggio"
            android:id="@+id/date"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image"
        android:src="@drawable/placeholder"
        android:scaleType="centerInside"
        android:background="@color/back_image"
        android:layout_below="@id/date_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/description"
        android:layout_below="@id/image"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/lorem200"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/askInfo"
        android:textAllCaps="false"
        android:layout_below="@id/description"
        android:textColor="@color/colorAccent"
        android:text="Chiedi informazioni"
        style="?android:attr/borderlessButtonStyle"
        />
</RelativeLayout>
</ScrollView>
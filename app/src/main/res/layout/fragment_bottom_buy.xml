<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearBottomBuy"
    tools:context=".BottomBuyFragment">
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodotti"/>
    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewProducts"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_margin="8dp"
        android:id="@+id/total"
        android:text="Riepilogo Totale" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imponibile: "
            android:id="@+id/imponibile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2284.0€"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:id="@+id/priceImponibile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+502.48€"
            android:textColor="#000"
            android:layout_below="@id/priceImponibile"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/priceIva"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iva"
            android:layout_marginTop="8dp"
            android:layout_below="@id/imponibile"
            android:text="IVA: " />
        <View
            android:layout_height="1dp"
            android:layout_below="@id/iva"
            android:layout_marginTop="8dp"
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:background="@color/text_grey"/>
        <TextView
            android:layout_below="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Totale:" />
        <TextView
            android:layout_below="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/priceTot"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="2786.48€" />
    </RelativeLayout>
</LinearLayout>
</ScrollView>
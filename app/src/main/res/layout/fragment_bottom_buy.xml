<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearBottomBuy"
    tools:context=".BottomBuyFragment">
    <TextView
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCEGLI QUALI PRODOTTI PRENOTARE"/>
    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"/>
    <ListView
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="wrap_content"
        android:id="@+id/listViewProducts"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/order_info"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:id="@+id/total"
        android:text="RIEPILOGO TOTALE"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFF"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Imponibile: "
            android:id="@+id/imponibile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2284.0€"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:id="@+id/priceImponibile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+502.48€"
            android:textColor="#000"
            android:layout_below="@id/priceImponibile"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/priceIva"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iva"
            android:layout_marginTop="8dp"
            android:layout_below="@id/imponibile"
            android:text="IVA: " />
        <View
            android:layout_height="1dp"
            android:layout_below="@id/iva"
            android:layout_marginTop="8dp"
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:background="@color/text_grey"/>
        <TextView
            android:layout_below="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Totale:" />
        <TextView
            android:layout_below="@id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/priceTot"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="2786.48€" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <com.dd.CircularProgressButton
        android:id="@+id/goOnButton"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="48dp"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        app:cpb_cornerRadius="8dp"
        app:cpb_iconComplete="@drawable/ic_done"
        app:cpb_iconError="@drawable/ic_close"
        app:cpb_textIdle="Avanti"
        app:cpb_selectorIdle="@drawable/idle_state_selector"/>
</LinearLayout>
</ScrollView>